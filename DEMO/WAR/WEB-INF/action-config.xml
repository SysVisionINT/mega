<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE action-config PUBLIC "-//MEGA//DTD action-config 1.0//EN" "http://www.sysvision.pt/dtds/mega-action_1_0.dtd">

<action-config>
	<controller>
		<property name="root-package" value="demo.action"/>
	</controller>
	
	<wrapper-chains>
		<default-wrapper-chain>
			<action-wrapper class-name="net.java.mega.action.wrapper.SessionValidatorWrapper">
				<property name="attribute-name" value="USER"/>
				<property name="forward-url" value="/login"/>
			</action-wrapper>
		</default-wrapper-chain>
		<wrapper-chain name="not-secured">
			<action-wrapper class-name="net.java.mega.action.wrapper.BasicWrapper"/>
		</wrapper-chain>
	</wrapper-chains>
	
	<actions>
		<action name="/login" class-name="demo.action.Login" wrapper-chain="not-secured"/>
		<action name="/currentLocate" class-name="demo.action.CurrentLocate" wrapper-chain="not-secured"/>
	</actions>
	
	<errors>
	</errors>
	
	<resources>
		<bundle name="Message"/>
		<bundle name="Format"/>
		<bundle name="System"/>
	</resources>
</action-config>
